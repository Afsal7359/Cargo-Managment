        <section class="blog-grid">
            <div class="container">
                <div class="section-title mb-2-3 mb-md-6 text-center wow fadeInUp" data-wow-delay="200ms">
                    <span class="sub-title text-animation" data-in-effect="fadeInRight">News Feeds</span>
                    <h2 class="h1">Read Our Latest News</h2>
                </div>
                <div class="row mt-n5">
                    <% for (let i = 0; i < blogs.length; i++) { %>
                        <% let currentblogs = blogs[i]; %>
                    <div class="col-md-6 col-lg-4 mt-5 wow fadeIn" data-wow-delay="200ms">
                        <article>
                            <div class="blog-style01">
                                <div class="inner-box">
                                    <div class="mb-3 image-hover">
                                        <img src="<%=currentblogs.blogimage%>" alt="..">
                                        <span class="post-date"><%=currentblogs.blogdate%></span>
                                    </div>
                                    <div class="position-relative">
                                       
                                    </div>
                                    <h5 class="mb-3"><a href="/blog"><%=currentblogs.bloghead%></a></h5>
