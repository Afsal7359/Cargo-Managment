<section>
    <div class="container">
        <div class="row g-xl-5 mt-n2-6 portfolio-galler">
            <% for (let i = 0; i < gallerys.length; i++) { %>
                <% let currentgallerys = gallerys[i]; %>
                <div class="col-sm-6 col-lg-4 mt-2-6" data-src="<%= currentgallerys.galleryimage %>" data-sub-html="<h4 class='text-white'>Road Transportation #01</h4>">
                    <div class="card card-style3">
                        <div>
                            <div class="card-flip-front"><img class="card-img" src="<%= currentgallerys.galleryimage %>" alt="Portfolio thumb"></div>
                            <!-- Facebook Share Link -->
                            <div id="app">
                            <button type="button" class="facebook-share-button btn btn-success" data-galleryimage="<%= currentgallerys.galleryimage %>">Share</button>
                           

  
                            </div>
                        </div>
                    </div>
                </div>
                
            <% } %>

        </div>
    </div>
</section>

<% for (let i = 0; i < gallerys.length; i++) { %>
    <% let currentgallerys = gallerys[i]; %>
    <script>
     document.addEventListener("DOMContentLoaded", function () {
  const facebookButtons = document.querySelectorAll(".facebook-share-button");

  facebookButtons.forEach((button) => {
    button.addEventListener("click", async () => {
      const imageSrc = button.getAttribute("data-galleryimage");

      const shareData = {
        title: "MDN",
        text: "Learn web development",
        url: imageSrc,
      };

      try {
        await navigator.share(shareData);
        console.log();("Shared successfully");
      } catch (err) {
        console.log();(`Error: ${err}`);
      }
    });
  });
});

    </script>
  <% } %>
  
      












